{
  "pluginAlias": "HyperionRemote",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Hyperion Remote"
      },
      "hyperionHost": {
        "title": "Hyperion Host Name/IP",
        "type": "string",
        "required": true,
        "default": "localhost"
      },
      "hyperionPort": {
        "title": "Hyperion Port",
        "type": "string",
        "required": true,
        "default": "8090"
      },
      "hyperionEffect": {
        "title": "Desired Effect(s)",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "title": "Mode",
          "type": "string",
          "enum": [
            "Blue mood blobs",
            "Candle",
            "Full color mood blobs",
            "Plasma"
          ]
        }
      }
    }
  }
}
